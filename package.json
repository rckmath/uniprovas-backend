{
  "name": "uniprovas-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rckmath/uniprovas-backend.git",
  "author": "rckmath <ericklopes02@gmail.com>",
  "license": "MIT",
  "scripts": {
    "env:dev": "cp .env-development .env",
    "env:prod": "cp .env-production .env",
    "migrate": "yarn sequelize-cli db:migrate",
    "seed-db": "yarn sequelize-cli db:seed:all",
    "lint": "yarn eslint -c .eslintrc --ext .js ./src",
    "build:dev": "yarn env:dev & docker-compose build",
    "build:prod": "yarn env:prod & docker-compose build",
    "docker:dev": "docker-compose --env-file .env-development up",
    "docker:prod": "docker-compose --env-file .env-production up",
    "migration-undo": "yarn sequelize-cli db:migrate:undo --name",
    "migration-undo-all": "yarn sequelize-cli db:migrate:undo:all",
    "start": "set NODE_ENV=production && yarn babel-node ./index.js",
    "start:dev": "set NODE_ENV=development && nodemon -L --exec babel-node ./index.js"
  },
  "dependencies": {
    "@babel/register": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "aws-sdk": "^2.931.0",
    "compression": "^1.7.4",
    "core-js": "^3.14.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "googleapis": "^77.0.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mjml": "^4.10.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.2",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "regenerator-runtime": "^0.13.7",
    "sequelize": "^6.6.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0"
  }
}
